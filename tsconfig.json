{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es6",
    "module": "ESNext",
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
