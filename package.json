{
  "name": "my-cool-genpass",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "format": "prettier --write '{src,examples}/**/*.js'",
    "examples": "npm run build && node examples/index.js",
    "lint": "eslint 'src/**/*.js' --fix",
    "test": "jest",
    "build": "rollup -c",
    "prepare": "husky"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "useTabs": false,
    "trailingComma": "all",
    "tabWidth": 2
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.js$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "eslint": "^9.19.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "3.4.2",
    "rollup": "^4.34.6"
  }
}
