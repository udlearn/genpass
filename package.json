{
  "name": "@udlearn/genpass",
  "version": "1.1.0",
  "description": "Password generation made easy",
  "author": "Ralph Florent",
  "homepage": "https://github.com/udlearn/genpass",
  "license": "MIT",
  "repository": "github:udlearn/genpass",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "browser": "lib/bundle.js",
  "types": "lib/types.d.ts",
  "bin": {
    "genpass": "lib/cli.js"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "password",
    "generation",
    "cli"
  ],
  "scripts": {
    "format": "prettier --write '{src,examples}/**/*.ts'",
    "examples": "tsc -p tsconfig.dev.json && node build/examples/index.js",
    "lint": "eslint '{src,test}/**/*.ts' --fix",
    "test": "jest",
    "prebuild": "rm -rf lib",
    "build": "rollup -c",
    "postbuild": "chmod +x lib/cli.js",
    "prepare": "husky"
  },
  "dependencies": {
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "eslint": "^9.19.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "3.4.2",
    "rollup": "^4.34.6",
    "rollup-plugin-dts": "^6.1.1",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  },
  "lint-staged": {
    "*.ts": "eslint '{src,test}/**/*.ts' --fix",
    "*.{ts,js,md,json}": "prettier --write '{src,test,examples}/**/*.ts'"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "useTabs": false,
    "trailingComma": "all",
    "tabWidth": 2
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "transform": {
      "^.+.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.dev.json"
        }
      ]
    }
  }
}
